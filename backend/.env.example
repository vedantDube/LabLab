# Environment Variables for CarbonTwin Platform

# ChatGPT-5 API Configuration
CHATGPT5_API_KEY=your_chatgpt5_api_key_here

# Blockchain Configuration  
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
PRIVATE_KEY=your_ethereum_private_key_here
CONTRACT_ADDRESS=your_deployed_contract_address

# Database Configuration
DATABASE_URL=sqlite:///carbontwin.db

# Security Configuration
SECRET_KEY=your_secret_key_here_make_it_long_and_random
JWT_SECRET=your_jwt_secret_here

# Application Configuration
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5000

# External APIs (Optional)
WEATHER_API_KEY=your_weather_api_key
CARBON_TRACKER_API_KEY=your_carbon_tracker_api_key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=carbontwin.log

# Real-time Features
SOCKETIO_ASYNC_MODE=threading
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# AI Model Configuration
AI_MODEL_VERSION=gpt-5
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=1000

# Carbon Credit Marketplace
MARKETPLACE_FEE_PERCENTAGE=2.5
MIN_CREDIT_AMOUNT=1.0
MAX_CREDIT_AMOUNT=10000.0

# Blockchain Network Settings
NETWORK_ID=1  # 1 for mainnet, 3 for ropsten, 4 for rinkeby
GAS_PRICE=20000000000  # 20 Gwei
GAS_LIMIT=3000000
